#header
    background: color-header-background
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative
    float: right

#header-title
    clearfix()
    // text-align: center
    // padding: 30px 30px
    float: left
    .logo-wrap, .subtitle-wrap
        float: left
    .subtitle-wrap
        // padding: 10px 0px 0px
        margin-left: 20px
    .subtitle
        font-size: font-size-subtitle
        font-style: italic
        line-height: line-height-header
        color: #fff
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
        text-decoration: none
